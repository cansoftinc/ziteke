<?xml version="1.0" encoding="utf-8"?>
<ScrollView android:id="@+id/widget192" android:layout_width="fill_parent"
	android:background="#FF8C00" android:layout_height="fill_parent"
	xmlns:android="http://schemas.android.com/apk/res/android">
	<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
		android:orientation="vertical" android:layout_width="fill_parent"
		android:layout_height="296dp">
		<TextView android:layout_width="wrap_content" android:text="OUTLET NAME :: "
			android:textAppearance="?android:attr/textAppearanceMedium"
			android:textStyle="bold" android:id="@+id/aoutletname"
			android:textSize="18sp" android:layout_height="30dp"
			android:layout_gravity="center_horizontal"></TextView>
		<TextView android:layout_height="30dp" android:id="@+id/aDetails"
			android:textSize="18sp" android:text="Address and Location"
			android:textStyle="normal" android:textAppearance="?android:attr/textAppearanceMedium"
			android:layout_x="18dp" android:layout_y="4dp"
			android:layout_gravity="center_horizontal" android:layout_width="wrap_content"></TextView>
		<TextView android:layout_height="30dp" android:id="@+id/aDetails"
			android:textSize="18sp" android:text="Select product type and Input Qty"
			android:textStyle="normal" android:textAppearance="?android:attr/textAppearanceMedium"
			android:layout_x="18dp" android:layout_y="4dp"
			android:layout_gravity="center_horizontal" android:layout_width="wrap_content"></TextView>

		<TextView android:text="TYPE::" android:textColor="#000"
			android:textAppearance="?android:attr/textAppearanceMedium"
			android:id="@+id/tvType" android:layout_height="wrap_content"
			android:layout_width="wrap_content"></TextView>
		<Spinner android:id="@+id/spBrand" android:layout_height="wrap_content"
			android:layout_width="match_parent"></Spinner>
		<TextView android:textAppearance="?android:attr/textAppearanceMedium"
			android:textColor="#000" android:id="@+id/tvBrandName"
			android:layout_height="wrap_content" android:text="Product Name:"
			android:layout_width="wrap_content"></TextView>
		<Spinner android:id="@+id/spProduct" android:layout_height="wrap_content"
			android:layout_width="match_parent"></Spinner>
		<TextView android:text="Product Selected::"
			android:textAppearance="?android:attr/textAppearanceMedium"
			android:layout_height="wrap_content" android:layout_width="wrap_content"
			android:id="@+id/textView1"></TextView>

		<TableLayout android:id="@+id/TableLayout_productselected"
			android:layout_width="wrap_content" android:layout_height="wrap_content"
			android:stretchColumns="*">
			<TableRow android:id="@+id/TableRow_proselected"
				android:layout_width="wrap_content" android:layout_height="wrap_content">
				<TextView android:text="NONE" android:textAppearance="?android:attr/textAppearanceMedium"
					android:layout_height="wrap_content" android:layout_width="wrap_content"
					android:id="@+id/tvProductselected"></TextView>

			</TableRow>
			<TableRow android:id="@+id/TableRow_proQty"
				android:layout_width="wrap_content" android:layout_height="wrap_content">
				<EditText android:id="@+id/edqty" android:layout_height="wrap_content" android:maxLength="10" android:minWidth="10px" android:maxWidth="10px"
					android:layout_width="match_parent" android:inputType="number"></EditText>

			</TableRow>
		</TableLayout>


		<TableLayout android:id="@+id/TableLayout_btnproduct"
			android:layout_width="wrap_content" android:layout_height="wrap_content"
			android:stretchColumns="*">

			<TableRow android:id="@+id/tableRow1" android:layout_width="wrap_content"
				android:layout_height="wrap_content">


			</TableRow>
			<TableRow android:id="@+id/TableRow01" android:layout_width="wrap_content"
				android:layout_height="wrap_content">
				<Button android:id="@+id/p_save" android:layout_width="79dp"
					android:textStyle="bold" android:layout_height="wrap_content"
					android:text="SAVE" android:layout_x="120dp" android:layout_y="412dp">
				</Button>

				<Button android:id="@+id/p_back" android:layout_width="77dp"
					android:textStyle="bold" android:layout_height="wrap_content"
					android:text="BACK" android:layout_x="210dp" android:layout_y="412dp">
				</Button>

				<Button android:id="@+id/p_logout" android:layout_width="77dp"
					android:textStyle="bold" android:layout_height="wrap_content"
					android:text="EXIT" android:layout_x="210dp" android:layout_y="412dp">
				</Button>

			</TableRow>

		</TableLayout>

	</LinearLayout>
</ScrollView>

